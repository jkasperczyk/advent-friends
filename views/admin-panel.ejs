              <option value="stefania">Stefania</option>
              <option value="jacek">Jacek</option>
            </select>
            <button class="bg-rose-700 hover:bg-rose-600 text-xs px-3 py-1.5 rounded">Usu≈Ñ wszystko</button>
            <span id="del-all-status" class="text-xs text-amber-200 ml-2"></span>
          </form>
        </div>
      </div>
    </section>
  </main>

  <script src="/js/admin-panel.js?v=205" defer></script>
</body>
</html>
