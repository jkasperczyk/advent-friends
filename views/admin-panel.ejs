  <main class="max-w-4xl mx-auto space-y-6">
    <section class="rounded-xl border border-emerald-500/30 bg-slate-900/60 p-4 shadow">
      <h2 class="font-semibold mb-3">U≈ºytkownicy</h2>
      <div class="grid sm:grid-cols-2 gap-3">
        <% users.forEach(u => { %>
          <div class="rounded-lg border border-slate-700/60 bg-slate-950/60 p-3 flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="w-9 h-9 rounded-full bg-emerald-700 grid place-items-center">üë§</div>
              <div>
